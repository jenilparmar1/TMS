# The Misal Story - Environment Variables Template
# Copy this file and rename to .env.local for local development

# ===========================================
# PUBLIC VARIABLES (exposed to browser)
# ===========================================

# Site Configuration
NEXT_PUBLIC_SITE_URL=http://localhost:3000
NEXT_PUBLIC_SITE_NAME="The Misal Story"

# API Configuration (for future backend integration)
NEXT_PUBLIC_API_URL=

# Google Maps Integration
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=

# Analytics
NEXT_PUBLIC_GA_ID=
NEXT_PUBLIC_GTM_ID=

# ===========================================
# PRIVATE VARIABLES (server-side only)
# ===========================================

# Contact Form Endpoint (for future API integration)
CONTACT_FORM_ENDPOINT=

# Database (for future backend)
DATABASE_URL=

# Email Service (for future notifications)
SMTP_HOST=
SMTP_PORT=
SMTP_USER=
SMTP_PASSWORD=

# ===========================================
# FEATURE FLAGS
# ===========================================
NEXT_PUBLIC_ENABLE_ONLINE_ORDERING=false
NEXT_PUBLIC_ENABLE_REVIEWS=true
NEXT_PUBLIC_ENABLE_MAP=false
